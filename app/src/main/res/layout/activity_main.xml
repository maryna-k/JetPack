<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    tools:context="com.example.android.jetpack.MainActivity">

    <TextView
        android:id="@+id/improve"
        style="@style/header"
        android:layout_marginTop="90dp"
        android:text="I want to improve my..." />

    <TextView
        android:id="@+id/improve_proposing"
        style="@style/small_text_centered"
        android:layout_below="@id/improve"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Here are a couple suggestions to get you started with a small habit"
        android:textColor="@color/textColorPrimary"/>


    <HorizontalScrollView
        android:id="@+id/horizontalScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/improve_proposing"
        android:layout_marginTop="15dp"
        android:animateLayoutChanges="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/upperRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/improve_lifestyle"
                    style="@style/improveOptions"
                    android:background="@drawable/rounded_corners"
                    android:text="Lifestyle" />

                <TextView
                    android:id="@+id/improve_health"
                    style="@style/improveOptions"
                    android:background="@drawable/rounded_corners"
                    android:text="Health" />

                <TextView
                    android:id="@+id/improve_learning"
                    style="@style/improveOptions"
                    android:background="@drawable/rounded_corners"
                    android:text="Learning" />

                <TextView
                    android:id="@+id/spiritual"
                    style="@style/improveOptions"
                    android:background="@drawable/rounded_corners"
                    android:text="Spiritual" />

                <TextView
                    android:id="@+id/mind"
                    style="@style/improveOptions"
                    android:background="@drawable/rounded_corners"
                    android:text="Mind" />

                <TextView
                    android:id="@+id/art"
                    style="@style/improveOptions"
                    android:background="@drawable/rounded_corners"
                    android:text="Art" />

                <TextView
                    android:id="@+id/brewing"
                    style="@style/improveOptions"
                    android:background="@drawable/rounded_corners"
                    android:text="Brewing" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cleaning"
                    style="@style/improveOptions"
                    android:background="@drawable/rounded_corners"
                    android:text="Cleaning" />

                <TextView
                    android:id="@+id/foreign_language"
                    style="@style/improveOptions"
                    android:background="@drawable/rounded_corners"
                    android:text="Foreign language" />

                <TextView
                    android:id="@+id/music"
                    style="@style/improveOptions"
                    android:background="@drawable/rounded_corners"
                    android:text="Music" />

                <TextView
                    android:id="@+id/reading"
                    style="@style/improveOptions"
                    android:background="@drawable/rounded_corners"
                    android:text="Reading" />

                <TextView
                    android:id="@+id/coding"
                    style="@style/improveOptions"
                    android:background="@drawable/rounded_corners"
                    android:text="Coding" />

                <TextView
                    android:id="@+id/sport"
                    style="@style/improveOptions"
                    android:background="@drawable/rounded_corners"
                    android:text="Sport" />

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>


    <TextView
        android:id="@+id/improve_own"
        style="@style/small_text_centered"
        android:layout_below="@id/horizontalScroll"
        android:layout_marginTop="20dp"
        android:text="Alternatively, you may write your own habit"
        android:textColor="@color/textColorPrimary"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_next"
        style="@style/fab"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/steps_next"
        app:elevation="4dp" />


</RelativeLayout>
